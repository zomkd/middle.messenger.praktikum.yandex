extends ../../../layouts/main-layout/main-layout.pug

include ../../../components/inputs/input-mixin.pug
include ../../../components/buttons/button-mixin.pug
include ../../../components/links/link-mixin.pug

block content
    script(type="module" src='~/src/views/auth/signIn/signIn.ts')
    .sign-in
        .sign-in__block
            .sign-in__block-title
                span(class="sign-in__block-title-text") Вход
            .sign-in__block-login-input
                +input-mixin('Логин')
                +input-mixin('Пароль')
            .sign-in__block-auth-btn
                +button-mixin('Авторизоваться')
            .sign-in__block-sign-up
                +link-mixin('../signUp/signUp.pug', 'Нет аккаунта?')
