extends ../../../layouts/main-layout/main-layout.pug

include ../../../components/inputs/input-mixin.pug
include ../../../components/buttons/button-mixin.pug
include ../../../components/links/link-mixin.pug

block content
    script(type="module" src='~/src/views/auth/signUp/signUp.ts')
    .signUp
        .signUp__block
            .signUp__block-title
                span(class="sign-in__title") Регистрация
            .signUp__block-user-info-input
                +input-mixin('Почта')
                +input-mixin('Логин')
                +input-mixin('Имя')
                +input-mixin('Фамилия')
                +input-mixin('Телефон')
                +input-mixin('Пароль')
                +input-mixin('Пароль (ещё раз)')
            .signUp__block-auth-btn
                +button-mixin('Зарегистрироваться')
            .signUp__block-signUp
                +link-mixin('../../chat/chat.pug', 'Войти')
